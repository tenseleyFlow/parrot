# Parrot Configuration Example
# Copy this file to one of the following locations:
# - ~/.config/parrot/parrot.toml (user-specific)
# - ~/.parrot.toml (user-specific, legacy)
# - /etc/parrot/parrot.toml (system-wide)

# ==================== BACKEND CONFIGURATION ====================

# Backend priority: "api", "local", "fallback"
# The system will try backends in this order until one works
backend_priority = ["local", "api", "fallback"]

# Default backend to use (overrides priority for direct selection)
# default_backend = "local"

# ==================== API BACKEND SETTINGS ====================

[api]
# OpenAI-compatible API endpoint
base_url = "https://api.openai.com/v1"

# API key for authentication
# Can also be set via PARROT_API_KEY environment variable
# api_key = "your-api-key-here"

# Model to use for generation
model = "gpt-4o-mini"

# Maximum tokens for response
max_tokens = 150

# Temperature for response creativity (0.0 = deterministic, 1.0 = creative)
temperature = 0.7

# Request timeout in seconds
timeout = 30

# ==================== LOCAL BACKEND SETTINGS ====================

[local]
# Ollama server endpoint
base_url = "http://localhost:11434"

# Model to use (will be pulled automatically if not present)
model = "phi3.5:3.8b"

# Generation options
max_tokens = 150
temperature = 0.7
timeout = 45

# Model management
auto_pull = true  # Automatically pull model if not available
pull_timeout = 300  # Timeout for model pulling in seconds

# ==================== PERSONALITY SETTINGS ====================

# Personality level: "mild", "sarcastic", "savage"
personality = "sarcastic"

# Enable colored output
colors = true

# Color scheme per personality (auto-detected if not specified)
# [colors]
# mild = "blue"
# sarcastic = "yellow" 
# savage = "red"

# ==================== SHELL INTEGRATION ====================

[shell]
# Enable shell integration hooks
enabled = true

# Shells to integrate with (detected automatically)
# supported_shells = ["bash", "zsh"]

# Hook installation paths (auto-detected)
# bash_profile = "~/.bashrc"
# zsh_profile = "~/.zshrc"

# ==================== ADVANCED SETTINGS ====================

[advanced]
# Enable debug logging
debug = false

# Log file location (empty = no file logging)
# log_file = "~/.config/parrot/parrot.log"

# Cache settings
cache_enabled = true
cache_duration = 3600  # seconds

# Retry settings
max_retries = 3
retry_delay = 1  # seconds

# ==================== FEATURE FLAGS ====================

[features]
# Enable experimental features
experimental = false

# Enable telemetry (anonymous usage statistics)
telemetry = false

# Enable auto-updates check
auto_update_check = true